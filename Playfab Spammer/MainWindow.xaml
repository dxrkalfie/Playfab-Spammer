<Window x:Class="PlayFabSpammerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlayFab Spammer" Height="650" Width="750"
        WindowStartupLocation="CenterScreen"
        Background="#111111"
        FontFamily="Segoe UI"
        WindowStyle="None" 
        AllowsTransparency="True">

    <Grid>
        <Border Background="#1B1B1B" Height="35" VerticalAlignment="Top">
            <Grid>
                <TextBlock Text="PlayFab Spammer" Foreground="#00BFFF" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <Button Content="X" Width="35" Height="35" HorizontalAlignment="Right" Background="Transparent" 
                        Foreground="Red" BorderThickness="0" FontWeight="Bold" FontSize="16" 
                        Click="CloseButton_Click"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <Grid Margin="0,35,0,0">
            <TabControl x:Name="MainTabControl" Background="#111" BorderBrush="#222" BorderThickness="1">
                <TabItem Header="PlayFab Spammer">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20" Background="#1B1B1B">
                            <TextBlock Text="PlayFab Title ID:" Foreground="#1E90FF" FontSize="14" Margin="5,5,5,0"/>
                            <TextBox x:Name="TitleIdTextBox" Width="320"/>

                            <TextBlock Text="Number of users to create:" Foreground="#1E90FF" FontSize="14" Margin="5,10,5,0"/>
                            <TextBox x:Name="NumberOfUsersTextBox" Width="100" Text="10"/>

                            <Button x:Name="StartActionButton" Content="Create Users" Width="150" Margin="5,15,0,0" Click="StartPlayFabAction"/>

                            <TextBlock Text="Log:" Foreground="#1E90FF" FontSize="14" Margin="5,15,5,0"/>
                            <Border Background="#111" CornerRadius="10" Padding="5">
                                <TextBox x:Name="LogTextBox" Height="300" FontFamily="Consolas" FontSize="12"
                                         Background="Transparent" Foreground="#00BFFF" IsReadOnly="True"
                                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
